@page
@model VetHouse.App.Presentacion.Pages.CreateHistoryModel
@{
}
<section>
    <h1 class="title-register-pet">History</h1>
    <div class="icon-pet"></div>
    <p class="subTitle-register-pet">Create History</p>
    <form method="post">
        <div class="form-group-textarea">
            <label asp-for="history.Diagnose" class="form-label-textarea">
                Diagnose
            </label>
            <textarea asp-for="history.Diagnose" class="form-input-textarea" rows="5" cols="25" required></textarea>
        </div>
        <div class="form-group" id="form-group-history">
            <input asp-for="history.CreatedAtHistory" class="form-input">
            <label asp-for="history.CreatedAtHistory" class="form-label">
                <span class="content-name">CreatedAtHistory</span>
            </label>
        </div>
        <input name="petId" value="@Model.pet.Id" type="hidden" />
        <div class="container-btn">
            <button class="btn-next" type="submit">CREATE</button>
        </div>
    </form>
</section>